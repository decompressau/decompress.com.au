$text = #665757
$shadow = #332121
$background = #FFC2C2
$accent = #FF7979

*
  box-sizing: border-box

html
  background: #fff
  font-family: Open Sans, Helvetica Neue
  font-weight: 300
  font-size: 62.5%
  color: $text
  @media screen and (max-width: 480px)
    font-size: 50%

body > :last-child
  padding-bottom: 14rem

.wrapper
  margin: 0 auto
  max-width: 700px
  padding: 0.1rem 3rem
h1
  margin: 0 0 7rem
  text-shadow: 1px 1px 0 $shadow, 2px 2px 0 $shadow, 3px 3px 0 $shadow, 4px 4px 0 $shadow, 5px 5px 0 $shadow, 6px 6px 0 $shadow, 7px 7px 0 $shadow, 8px 8px 0 $shadow, 9px 9px 0 $shadow, 10px 10px 0 $shadow, 11px 11px 0 $shadow, 12px 12px 0 $shadow, 13px 13px 0 $shadow, 14px 14px 0 $shadow, 15px 15px 0 $shadow, 16px 16px 0 $shadow, 17px 17px 0 $shadow, 18px 18px 0 $shadow, 19px 19px 0 $shadow, 20px 20px 0 $shadow, 21px 21px 0 $shadow, 22px 22px 0 $shadow, 23px 23px 0 $shadow, 24px 24px 0 $shadow, 25px 25px 0 $shadow, 26px 26px 0 $shadow, 27px 27px 0 $shadow, 28px 28px 0 $shadow, 29px 29px 0 $shadow, 30px 30px 0 $shadow, 31px 31px 0 $shadow, 32px 32px 0 $shadow, 33px 33px 0 $shadow, 34px 34px 0 $shadow, 35px 35px 0 $shadow, 36px 36px 0 $shadow, 37px 37px 0 $shadow, 38px 38px 0 $shadow, 39px 39px 0 $shadow, 40px 40px 0 $shadow, 41px 41px 0 $shadow, 42px 42px 0 $shadow, 43px 43px 0 $shadow, 44px 44px 0 $shadow, 45px 45px 0 $shadow, 46px 46px 0 $shadow, 47px 47px 0 $shadow, 48px 48px 0 $shadow, 49px 49px 0 $shadow, 50px 50px 0 $shadow
  font-family: Monoton, Helvetica Neue
  display: block
  font-weight: normal
  font-size: 150px
  line-height: 100%
  text-transform: uppercase
  color: #FFF7F7
  span:nth-child(2):after, span:nth-child(5):after
    content: ""
    display: block
  @media screen and (max-width: 700px)
    margin: 4rem 0 6rem
    font-size: 20vw
    text-shadow: 1px 1px 0 $shadow, 2px 2px 0 $shadow, 3px 3px 0 $shadow, 4px 4px 0 $shadow, 5px 5px 0 $shadow, 6px 6px 0 $shadow, 7px 7px 0 $shadow, 8px 8px 0 $shadow, 9px 9px 0 $shadow, 10px 10px 0 $shadow, 11px 11px 0 $shadow, 12px 12px 0 $shadow, 13px 13px 0 $shadow, 14px 14px 0 $shadow, 15px 15px 0 $shadow, 16px 16px 0 $shadow, 17px 17px 0 $shadow, 18px 18px 0 $shadow, 19px 19px 0 $shadow, 20px 20px 0 $shadow, 21px 21px 0 $shadow, 22px 22px 0 $shadow, 23px 23px 0 $shadow, 24px 24px 0 $shadow, 25px 25px 0 $shadow
h2
  color: $shadow
  font-style: normal
  font-size: 4rem
  font-weight: 300
  margin: 0 0 4rem
  @media screen and (max-width: 480px)
    font-size: 3rem
h3
  color: $text
  font-style: normal
  font-size: 4rem
  font-weight: 300
  margin: 3rem 0
  .sponsors &
    margin-bottom: 0
  @media screen and (max-width: 640px)
    font-size: 3.5rem
  @media screen and (max-width: 520px)
    font-size: 3.1rem
    margin-bottom: 3rem
h4
  color: lighten($text, 20%)
  font-style: normal
  font-size: 1.8rem
  font-weight: 300
  margin-bottom: 0rem

header
  background: $background
  padding: 7rem 0 4rem
  margin-bottom: 6rem
  position: relative
  overflow: hidden
  @media screen and (max-width: 480px)
    padding: 1rem 0 1.4rem
    margin-bottom: 4rem
#forkme
  background-color: #FFF7F7
  overflow: hidden
  position: absolute
  right: -60px
  top: 50px
  transform: rotate(45deg)
  z-index: 30
  border-image: initial
  box-shadow: 0 0 40px rgba(0,0,0,0.05)
  @media screen and (max-width: 480px)
    top: 35px
    right: -45px
  a
    border: none
    color: $text
    display: block
    font: 14px Helvetica Neue, Helvetica, Arial
    font-weight: bold
    margin: 0.05em 0 0.075em 0
    padding: 0.6em 5em
    text-align: center
    text-decoration: none
    border-image: initial
    @media screen and (max-width: 480px)
      font-size: 10px

.columns
  overflow: hidden
  &--topics
    padding: 1rem 0 2rem

  &__column
    margin: 0 auto
    width: 50%
    float: left
    &--1of1
      float: none
    @media screen and (max-width: 630px)
      float: none
      width: auto
      padding-right: 0

p
  font-size: 1.8rem
  line-height: 160%
  &:last-child
    margin-bottom: 0
strong
  font-weight: 600


ul,
dl
  list-style: none
  font-size: 1.8rem
  line-height: 160%
  margin-top: 0
  margin-bottom: 0rem
  padding: 0
  overflow: hidden
ul
  @media screen and (max-width: 480px)
    list-style: disc
    padding-left: 2rem
dt
  clear: left
  float: left
  font-weight: bold
  width: 8rem
  margin-right: 2rem
  padding-bottom: 2rem
  @media screen and (max-width: 600px)
    width: 8rem
    margin-right: 3rem
li,
dt
  padding-bottom: 1.5rem
  @media screen and (max-width: 480px)
    padding-bottom: 1rem
dd
  float: left
  margin-left: 0

a
  color: $accent
  text-decoration: none
  &:hover
    color: darken($accent, 30%)

section
  padding: 0 0 4rem
  @media screen and (max-width: 700px)
    padding-bottom: 3rem
  &.dark
    background: $shadow
    padding-top: 2rem
  &.grey
    background: #f0f0f0
    padding: 3rem 0 7rem
    margin: 3rem 0
    @media screen and (max-width: 700px)
      padding: 2rem 0 5rem
      margin: 2rem 0
  &.sponsors
    text-align: center
    padding-bottom: 10rem

.logo
  transform-origin: 0 0
  max-width: 80%
  @media screen and (max-width: 480px)
    max-width: 75%
  &--buildbox
    transform: scale(0.93) translateY(0.5%)
  &--thoughtworks
    transform: translateX(0%)
  &--melbourne-uni
    margin-top: 1.5rem
    max-width: 60%

.form
  margin-bottom: 1rem
  &--signup
    @media screen and (max-width: 700px)
      text-align: center
input, button, a.button
  font-weight: 300
  font-size: 2.4rem
  border: none
  @media screen and (max-width: 700px)
    text-align: center
input
  border-bottom: 1px solid #c0c0c0
  padding: 5px 0
  margin: 20px 6px 16px 0
  width: 100%
  max-width: 450px
  &:focus::-webkit-input-placeholder
    color: #fff
button, a.button
  display: inline-block
  padding: 4px 30px 6px
  background: $accent
  color: #FFF
  border: none
  border-radius: 4px
  &:first-child
    margin-top: 2.5rem
  &:active
    background: darken($accent, 10%)

img
  max-width: 100%

.topics
  margin-top: 0
  margin-bottom: 0
  padding-top: 0
  padding-bottom: 0

.speakers
  list-style: none
  padding: 1rem 0

  &__speaker
    background: #e5e5e5
    box-shadow: 0 2px 0 #909090
    display: inline-block
    width: 90px
    height: 90px
    overflow: hidden
    text-indent: -200%
    background-size: cover
    margin: 0 16px 16px 0
    border-radius: 100px
    @media screen and (max-width: 480px)
      width: 55px
      height: 55px
      margin: 0 12px 12px 0
